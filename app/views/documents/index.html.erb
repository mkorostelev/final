<h1>Files</h1>

<table class="table table-striped">
  <thead class="thead-default">
    <tr>
      <th>Filename</th>
      <th>Content type</th>

      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.filename %></td>
        <td><%= document.content_type %></td>
        <td>
          <%= link_to 'Show', document %></br>
          <%= link_to 'Edit', edit_document_path(document) %></br>
          <%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <td><%= link_to 'Download', download_path(document), disable_with: 'Downloading...' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to new_document_path, :method => :get, class: "btn btn-success" do %>
  New File
<% end %>
