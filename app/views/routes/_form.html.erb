<%= bootstrap_form_for(route) do |f| %>
  <div>
    <%= f.text_field :title, help: "Must be at least 3 characters long" %>
  </div>
  <div>
    <%= f.text_area :description, rows: 6 %>
  </div>
  <div>
    <%= f.collection_select(:author_id, User.all, :id, :name, prompt: 'Select an author') %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
